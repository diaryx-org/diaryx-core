{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Diaryx",
  "version": "0.9.1",
  "identifier": "org.diaryx.desktop",
  "build": {
    "beforeDevCommand": "cd ../web && bun run dev --port 5174",
    "devUrl": "http://localhost:5174",
    "beforeBuildCommand": "cd ../web && bun run build",
    "frontendDist": "../../web/dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Diaryx",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "dragDropEnabled": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "targets": "all",
    "macOS": {
      "minimumSystemVersion": "10.15"
    }
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "fs": {
      "requireLiteralLeadingDot": false
    }
  }
}
